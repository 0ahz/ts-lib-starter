{
  "name": "ts-lib-starter",
  "version": "0.0.0",
  "description": "Typescript library starter",
  "repository": "0ahz/ts-lib-starter",
  "license": "MIT",
  "author": "YOUR NAME <YOUR EMAIL>",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "dev": "npm run build -- --watch",
    "start": "esno src/index.ts",
    "build": "tsup src/index.ts --format cjs,esm --dts-resolve --minify",
    "build-umd": "tsup src/index.ts --format iife --global-name libName --minify --sourcemap",
    "prepublishOnly": "npm run build",
    "release": "bumpp --commit --push --tag && npm publish"
  },
  "devDependencies": {
    "@0ahz/prettier-config": "^0.0.2",
    "@sucrase/jest-plugin": "^2.2.0",
    "@types/jest": "^27.0.3",
    "bumpp": "^7.1.1",
    "esno": "^0.12.1",
    "jest": "^27.4.3",
    "prettier": "^2.5.0",
    "ts-jest": "^27.0.7",
    "tsup": "^5.10.1",
    "typescript": "^4.5.2"
  }
}
